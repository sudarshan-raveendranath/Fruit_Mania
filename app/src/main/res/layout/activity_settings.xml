<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cnslayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-170dp"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fallh"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="322dp"
        android:layout_height="404dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvGameTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trickyjimmy"
            android:text="Select Game Time:"
            android:textColor="@color/purple"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/gameTimeSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/purple"
            android:entries="@array/game_time_options" />

        <TextView
            android:id="@+id/tvDifficultyLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/trickyjimmy"
            android:text="Select Difficulty Level:"
            android:textColor="@color/purple"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/difficultySpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple"
            android:entries="@array/difficulty_options" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/trickyjimmy"
            android:text="@string/OK"
            android:textSize="34sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="336dp"
        android:layout_height="398dp"
        android:layout_marginTop="510dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fallm" />

</androidx.constraintlayout.widget.ConstraintLayout>